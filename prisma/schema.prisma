generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Upload {
  id         String   @id @default(cuid())
  uploadAt   DateTime @default(now())
  expiresAt  DateTime
  filename   String
  url        String   @unique
  type       String
  r2Key      String
  domain     String
}

model UploadSession {
  id           String   @id
  status       String
  progress     Int
  filename     String
  fileType     String
  fileSize     Int
  expiresField String
  domain       String
  error        String?
  result       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  completedAt  DateTime?
}
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Upload {
  id         String   @id @default(cuid())
  uploadAt   DateTime @default(now())
  expiresAt  DateTime
  filename   String
  url        String   @unique
  type       String
  r2Key      String
  domain     String
}

model ChunkSession {
  id          String   @id
  fileId      String   @unique
  fileName    String
  fileType    String
  fileSize    Int
  totalChunks Int
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  chunks ChunkRecord[]

  @@map("chunk_sessions")
}

model ChunkRecord {
  id         String @id @default(cuid())
  sessionId  String
  chunkIndex Int
  createdAt  DateTime @default(now())

  session ChunkSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, chunkIndex])
  @@map("chunk_records")
}